function followed(obj,uid){
	if(obj.innerHTML.replace(/(^\s+)|(\s+$)/g, "")=='关注'){
		obj.innerHTML='取消关注';
		obj.style.color='#999';
	}else{
		obj.innerHTML='关注';
		obj.style.color='#0088CC';
	}
	$.post("/followed", {uid:uid},
		function(data){
		 	 
		});
}
</script>

