	if(site == '163miniblog'){
		var surl="http://t.163.com/article/user/checkLogin.do?source="+encodeURI('译言网')+"&info="+title+" "+t_url+" ";
	}else{
		var surl="http://www.bshare.cn/bshare_redirect?type=0&site="+site+"&url="+t_url+"&title="+title+"&content="+content+"";
	}
	window.open(surl);
}
