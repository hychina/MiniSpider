			<script>
			function bindEnter(event) {
				if (event.keyCode == 13) {
					var keyword=document.getElementById('keyword').value.replace(/(^\s*)|(\s*$)/g, "");
					if(keyword!=''){
						window.location.href='/search/'+encodeURIComponent(keyword);
						event.returnValue = false;
					}
				}
			}
			</script>
