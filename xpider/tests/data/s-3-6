	<a href="javascript:void(0)" onclick="shareme('qqshuqian','6','http%3A%2F%2Farticle.yeeyan.org%2Fview%2F3%2F6','%E6%8A%98%E7%A3%A8%E4%BA%BA%E7%9A%84%E5%95%86%E4%B8%9A%E8%AE%A1%E5%88%92%E4%B9%A6','%E4%BB%8E90%E5%B9%B4%E4%BB%A3%E4%BB%A5%E6%9D%A5%EF%BC%8C%E6%88%91%E5%87%A0%E7%BB%8F%E7%9C%8B%E4%BA%86%E6%88%90%E5%8D%83%E4%B8%8A%E4%B8%87%E7%9A%84%E5%95%86%E4%B8%9A%E8%AE%A1%E5%88%92%E6%8A%A5%E5%91%8A%E3%80%82%E5%85%B6%E4%B8%AD%E7%BB%9D%E5%A4%A7%E9%83%A8%E5%88%86%E9%83%BD%E5%BE%88%E7%B3%9F%E7%B3%95%E3%80%82%E4%B8%8D%E5%B9%B8%E7%9A%84%E6%98%AF%EF%BC%8C%E8%BF%99%E5%B9%B6%E4%B8%8D%E6%98%AF%E5%BE%AE%E8%BD%AFPowerpoint%E8%BD%AF%E4%BB%B6%E7%9A%84%E9%94%99%EF%BC%88%E5%8D%B3%E4%BD%BF%20Freelance%20%E4%B9%9F%E4%B8%8D%E8%83%BD%E8%A7%A3%E5%86%B3%E8%BF%99%E4%B8%AA%E9%97%AE%E9%A2%98%EF%BC%89%E3%80%82%20%E8%BF%99%E5%85%B6%E5%AE%9E%E6%98%AF%E8%AE%A1%E5%88%92%E4%BD%9C%E8%80%85%E7%9A%84%E8%B4%A3%E4%BB%BB%E3%80%82Edward%20Tufte%20%E6%98%AF%20The%20Visual%20Display%20of%20Quantitative%20Information%E6%96%B9%E9%9D%A2%E7%9A%84%E6%9D%83%E5%A8%81%EF%BC%8C%E4%BB%96%E8%AE%A4%E4%B8%BAPowerpoint%20%E7%BB%9D%E5%AF%B9%E6%98%AF%E9%82%AA%E6%81%B6%E8%80%8C%E4%B8%94%E6%9C%89%E5%AE%B3%E7%9A%84%E3%80%82%E8%B1%A1%20Beyond%20Bullets%20%E8%BF%99%E6%A0%B7%E7%9A%84%E7%BD%91%E7%AB%99%E6%9C%89%E5%8A%A9%E4%BA%8E%E5%87%8F%E5%B0%91%E8%BF%99%E4%BA%9B%E5%AE%B3%E5%A4%84%EF%BC%8C%E4%BD%86%E6%98%AF%E5%9B%A0%E4%B8%BA%E6%88%91%E5%BF%85%E9%A1%BB%E5%9C%A8%E5%BE%88%E7%9F%AD%E7%9A%84%E6%97%B6%E9%97%B4%E9%87%8C%EF%BC%88%E9%80%9A%E5%B8%B8%E6%98%AF30%E5%88%B060%E5%88%86%E9%92%9F%EF%BC%89%E5%AE%8C%E6%88%90%E9%9D%9E%E5%B8%B8%E7%BB%86%E8%8A%82%E5%86%85%E5%AE%B9%EF%BC%8C%E6%88%91%E6%83%B3%E6%9C%89%E5%BF%85%E8%A6%81%E6%9B%B4%E8%AF%A6%E7%BB%86%E7%9A%84%E4%BB%8B%E7%BB%8D%E4%B8%80%E4%B8%8B%E4%BB%80%E4%B9%88%E6%98%AF%E2%80%9C%E5%A5%BD%E7%9A%84%E2%80%9C%E8%AE%A1%E5%88%92%E3%80%82%20%E5%87%A0%E5%B9%B4%E4%BB%A5%E5%89%8D%EF%BC%8CChris%20Wand%20%EF%BC%88%E5%92%8C%E6%88%91%E4%B8%80%E8%B5%B7%E5%9C%A8%20Mobius%20%E6%8A%95%E8%B5%84%E5%85%AC%E5%8F%B8%E5%B7%A5%E4%BD%9C%E8%BF%87%EF%BC%89%E5%88%97%E5%87%BA%E4%BA%86%E4%B8%80%E4%BA%9B%E5%92%8CVC%E5%95%86%E8%B0%88%E6%97%B6%E5%BF%85%E9%A1%BB%E8%A7%A3%E5%86%B3%E7%9A%84%E9%97%AE%E9%A2%98%E3%80%82%E5%A6%82%E6%9E%9C%E6%89%80%E6%9C%89%E5%88%9B%E4%B8%9A%E8%80%85%E9%83%BD%E8%87%AA%E8%A7%89%E8%80%83%E8%99%91%E5%B9%B6%E8%A7%A3%E7%AD%94%E4%BA%86%E8%BF%99%E4%BA%9B%E9%97%AE%E9%A2%98%EF%BC%8C%E9%82%A3%E4%B8%96%E7%95%8C%E4%BC%9A%E5%8F%98%E5%BE%97%E5%AE%B9%E6%98%93.....')"  class="share_2" title="分享到QQ">分享到QQ</a>

