									return false;
								}else{
									document.comment_frm.submit();
									document.getElementById('submit_btn').onclick=function(){return false;}
								}
							}
							function clearComment() {
								var com = $("#mycomment").val();
								if (com == '请在此输入您的评论内容......') {
									$("#mycomment").val('');
								}
							}
						</script>
